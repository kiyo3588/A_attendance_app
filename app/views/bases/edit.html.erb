    <ul>
    <% @base.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h1>拠点編集</h1>
<%= form_with(model: @base, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :base_number, "拠点番号" %>
    <%= f.number_field :base_number, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :base_name, "拠点名" %>
    <%= f.text_field :base_name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :base_type, "拠点種類" %>
    <%= f.text_field :base_type, class: 'form-control' %>
  </div>
  <%= f.submit "更新", class: 'btn btn-primary' %>
<% end %>