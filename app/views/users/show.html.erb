<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td colspan="2">
      <%= link_to "◀", user_path(date: @first_day.prev_month), class: " btn btn-info" %>
      <%= l(@first_day, format: :middle) %> 時間管理表
      <%= link_to "▶", user_path(date: @first_day.next_month), class: " btn btn-info" %>
    </td>
    <td>指定勤務開始時間<%= @user.designated_work_start_time.strftime("%H:%M") %><br>指定勤務終了時間 <%= @user.designated_work_end_time.strftime("%H:%M") %></td>
      <td colspan="2">基本時間：<%= format_basic_info(@user.basic_work_time) %></td>
      <td>初日：<%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td colspan="2">所属：<%= @user.affiliation.present? ? @user.affiliation : "未所属" %></td>
      <td>氏名：<%= @user.name %></td>
      <td>コード：<%= @user.employee_number %></td>
      <td>出勤日数： <%= @worked_sum %>日</td>
      <td>締め：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>
<div class="btn-users-show">
  <div class="d-flex justify-content-start mb-2">
    <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
    <%= link_to "CSV出力", "#", class: "btn btn-primary me-2" %> <!-- "#"は仮のパスです -->
  </div>
  <div>
  <%= link_to "勤怠修正ログ(承認済み)", "#", class: "btn btn-primary" %> <!-- "#"は仮のパスです -->
  </div>
</div>
<div>
  <% total_working_hours = 0.0 %>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan="2"></th>
        <th rowspan="2"></th>
        <th rowspan="2"></th>
        <th colspan="7">【実績】</th>
        <th colspan="5">所定外勤務</th>
      </tr>
      <tr>
        <th colspan="2">出社</th>
        <th></th>
        <th colspan="2">退社</th>
        <th></th>
        <th></th>
        <th colspan="2">終了予定時間</th>
        <th colspan="3"></th>
      </tr>
      <tr>
        <th>残業申請</th>
        <th>日付</th>
        <th>曜日</th>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th>在社時間</th>
        <th>備考</th>
        <th>時</th>
        <th>分</th>
        <th>時間外時間</th>
        <th>業務処理内容</th>
        <th>指示書確認㊞</th>
      </tr>
    </thead>
    
    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td>
            <%= link_to "残響申請", "#", class: "btn btn-primary" %>
          </td>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td class="<%= day.worked_on.strftime('%a').downcase %>">
            <%= $days_of_the_week[day.worked_on.wday] %>
          </td>
          <td><%= l(day.started_at, format: :hour) if day.started_at.present? %></td>
          <td><%= format_rounded_minutes(day.started_at) if day.started_at.present? %></td>
          <td>
            <% if btn_text = attendance_state(day) %>
              <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          </td>
          <td><%= l(day.finished_at, format: :hour) if day.finished_at.present? %></td>
          <td><%= format_rounded_minutes(day.finished_at) if day.finished_at.present? %></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <% start_minutes = day.started_at.strftime("%M").to_i - (day.started_at.strftime("%M").to_i % 15) %>
              <% end_minutes = day.finished_at.strftime("%M").to_i - (day.finished_at.strftime("%M").to_i % 15) %>
              <% working_hours = ((day.finished_at - day.started_at) / 3600.0).floor %>
              <% working_minutes = ((end_minutes - start_minutes + 60) % 60) / 60.0 %>
              <% total_working_hours += working_hours + working_minutes %>
              <%= format("%.2f", working_hours + working_minutes) %>
            <% end %>
          </td>
          <td><%= day.note %></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
      <% end %>
    </tbody>

    <tfoot>
      <tr>
        <td>総合勤務時間</td>
        <td colspan="6"></td>
        <td>合計在社時間</td>
        <td>所属長承認</td>
      </tr>
      <tr>
        <td><%= format_basic_info(@user.basic_work_time).to_f * @worked_sum %></td>
        <td colspan="6"></td>
        <td><%= format("%.2f", total_working_hours) %></td>
        <td></td>
      </tr>
    </tfoot>
  </table>
</div>